{
    "name" : "hermes",
    "tool-version": "0.9",
    "description": "HERMES is a discrete supply chain model",
    "command-line": "python main.py [VERBOSE] [DEBUG] [INPUTFILE] [OUTDIR] [THREADS] --average"
    "scheme-version": "0.4",
    "inputs": [
		{
			"id" : "input",
			"name" : "Input file",
			"type" : "File",
			"description" : "Input KVP or Zip file",
			"optional" : false,
			"value-key" : "[INPUTFILE]",
			"command-line-flag" : "-i"
		},
		{
			"command-line-flag" : "--verbose",
			"id" : "verbose_flag",
			"name" : "Verbosity Flag",
			"type: "Flag",
			"optional" : true,
			"value-key" : "[VERBOSE]"
		},
		{
			"command-line-flag": "--debug",
			"id" : "debug_flag",
			"name" : "Debug flag",
			"type" : "Flag",
			"optional" : true,
			"value-key" : "[DEBUG]"
		},
		{
			"command-line-flag" : "--threads",
			"id" : "number_of_threads",
			"name" : "Number of Threads",
			"type" : "Number",
			"integer" : true,
			"minimum" : 1,
			"optional" : true,
		},
		//{
		//	"command-line-flag" : "--average",
		//	"id" : "do_average_of_results_flag",
		//	"name" : "Do Average  Of Resutls Flag",
		//	"type" : "Flag",
		//	"optional" : true,
		//	"value-key" : "[AVERAGE]"
		//},
	],
    "output-files": [
		{
			"id" : "summary_average",
			"name" : "Summary Average",
			"description" : "This is the average csv file for for the summary statistics of the simulation run",
			"path-template" : "[OUTDIR]_ave_summary.csv",
			"optional" : false
		},
		{
			"id" : "full_average",
			"name" : "Full Average",
			"description" : "This has everything in it",
			"path-template" : "[OUTDIR]_ave.csv",
			"optional" : false
		},
		{
			"id" : "cost_average",
			"name" : "Cost Average",
			"description" : "This is the average costs if it was included in the input",
			"path-template" : "[OUTDIR]_costs_ave.csv",
			"optional" : true
		}
	]
}