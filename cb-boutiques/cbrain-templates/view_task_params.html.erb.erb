<strong>Input files</strong>
<ul>
  <%% params[:interface_userfile_ids].each do |id| %>
  <li><%%= link_to_userfile_if_accessible(id) %></li>
  <%% end %>
</ul>

<strong>Mandatory inputs</strong>
<ul>
<%-@inputs.each do |input|-%>
<%-if input.get_type == "String" and ( input.get_optional=="false" or input.get_optional=="" ) -%>
<li><b><%= input.get_name %>:</b>
<%%= form.params_text_field :<%= input.get_name%> %></br>
<%= input.get_documentation %>
</li>
<%-end-%>
<%-if input.get_type == "Flag"-%>
<li><b><%= input.get_name %>:</b>
<%%= form.params_check_box :<%= input.get_name%> %></br>
<%= input.get_documentation %>
</li>
<%-end-%>
<%-end-%>
</ul>

<strong>Optional inputs</strong>

<ul>
<%-@inputs.each do |input|-%>
<%-if input.get_type == "String" and ( input.get_optional=="true" ) -%>
<li><b><%= input.get_name %>:</b>
<%%= form.params_text_field :<%= input.get_name%> %></br>
<%= input.get_documentation %>
</li>
<%-end-%>
<%-if input.get_type == "Flag"-%>
<li><b><%= input.get_name %>:</b>
<%%= form.params_check_box :<%= input.get_name%> %></br>
<%= input.get_documentation %>
</li>
</ul>
<%-end-%>
<%-end-%>

