<!-- Automatically generated by cb-boutiques -->

<fieldset>
<legend>Mandatory input(s)</legend>
<ul>
<%-@inputs.each do |input|-%>
  <%- if !input.is_optional?-%>
    <li><b><%= input.get_name %>:</b>
    <%-if input.get_type == "String"-%>
      <br/>
      <%%= form.params_text_field :<%= input.get_name%> %><br/>
    <%-end-%>
    <%-if input.get_type == "File"-%>
      <br/>
      <%%-file_list  = Userfile.where(:id =>  params[:interface_userfile_ids]).all.map {|u| [u.name,u.id.to_s] }-%>
      <%%= form.params_select '<%= input.get_name%>[]', file_list, {selected: file_list.map{|x| x[1]} }, {:multiple => true, :class => "form-control"} %><br/>
    <%-end-%>
    <%-if input.get_type == "Flag"-%>
      <br/>
      <%%= form.params_check_box :<%= input.get_name%> %></br>
    <%-end-%>
    <%= input.get_description %>
    </li>
  <%-end-%>
<%-end-%>
</ul>
</fieldset>

<fieldset>
<legend>Optional input(s)</legend>
<ul>
  <%-@inputs.each do |input|-%>
    <%-if input.is_optional?-%>
        <li><b><%= input.get_name %>:</b>
    <%-if input.get_type == "String"-%>
      <br/>
      <%%= form.params_text_field :<%= input.get_name%> %><br/>
    <%-end-%>
    <%-if input.get_type == "File"-%>
      <br/>
      <%%-file_list  = Userfile.where(:id =>  params[:interface_userfile_ids]).all.map {|u| [u.name,u.id.to_s] }-%>
      <%%= form.params_select '<%= input.get_name%>[]', file_list, {selected: file_list.map{|x| x[1]} }, {:multiple => true, :class => "form-control"} %><br/>
    <%-end-%>
    <%-if input.get_type == "Flag"-%>
      <br/>
      <%%= form.params_check_box :<%= input.get_name%> %></br>
    <%-end-%>
    <%= input.get_description %>
    </li>
    <%-end-%>
  <%-end-%>
</ul>
</fieldset>
