            <%-token = "\#\{File.basename(params[:#{input.name}],
                            File.extname(params[:#{input.name}]))\}"-%>
          <%-else-%>
            <%-token = "\#\{params[:#{input.name}]\}"-%>
          <%-end-%>
        <%-# Performs the substitution.-%>
        <%-output.resolved_template = output.resolved_template.gsub(input.command_line_key,token)-%>
      <%-end-%>
