{
    "tool-version": "0.0.1", 
    "name": "Example Boutiques Tool", 
    "command-line": "exampleTool1.py [CONFIG_FILE] [STRING_INPUT] [FILE_INPUT] [FLAG_INPUT] [NUMBER_INPUT] [ENUM_INPUT]  &> [LOG]",
    "environment-variables": [ { "name": "ENVAR", "value": "theValue"}],
    "inputs": [
        {
            "command-line-flag": "-i", 
            "description": "Describe the use and meaning of the parameter", 
            "default-value": "aStringValue", 
            "value-key": "[STRING_INPUT]", 
            "type": "String", 
            "list": true, 
            "max-list-entries": 3, 
            "id": "str_input", 
            "min-list-entries": 1, 
            "name": "A string input"
        },
        {
            "name": "A number put in the configuration file", 
            "value-key": "[CONFIG_NUMBER]", 
            "type": "Number", 
            "id": "config_num",
	    "value-choices": [
		4
            ]
        },
        {
            "command-line-flag": "-n", 
            "name": "A number input", 
            "value-key": "[NUMBER_INPUT]", 
            "type": "Number", 
            "maximum": 1, 
            "minimum": 0, 
            "command-line-flag-separator": "=", 
            "exclusive-minimum": true, 
            "optional": true, 
            "id": "num_input"
        }, 
        {
            "value-key": "[FILE_INPUT]", 
            "optional": true,
            "type": "File", 
            "id": "file_input", 
            "name": "A file input"
        }, 
        {
	    "command-line-flag": "-e", 
            "name": "An enum input", 
            "value-key": "[ENUM_INPUT]", 
            "optional": true, 
            "value-choices": [
                "val1", 
                "val2", 
                "val3"
            ], 
            "type": "String", 
            "id": "enum_input"
        }, 
        {
            "command-line-flag": "-f", 
            "name": "A flag input", 
            "value-key": "[FLAG_INPUT]", 
            "optional": true, 
            "requires-inputs": [
                "file_input"
            ], 
            "disables-inputs": [
                "num_input"
            ], 
            "type": "Flag", 
            "id": "flag_input"
        }
    ], 
    "container-image": {
        "image": "boutiques/example1:test",
        "type": "docker"
    }, 
    "schema-version": "0.5", 
    "groups": [
        {
            "description": "This group forces us to choose exactly one of the file or the enum input to use.", 
            "one-is-required": true, 
            "mutually-exclusive": true, 
            "members": [
                "num_input", 
                "enum_input"
            ], 
            "id": "an_example_group", 
            "name": "Example group 1"
        }
    ], 
    "output-files": [
        {
            "description": "The output log file from the example tool", 
            "value-key": "[LOG]", 
            "id": "logfile", 
            "path-template": "log-[STRING_INPUT].txt", 
            "path-template-stripped-extensions": [
                ".txt", 
                ".csv"
            ], 
            "name": "Log file"
        }, 
        {
            "path-template": "output/*_exampleOutputTag.resultType", 
            "optional": true, 
            "list": true, 
            "id": "output_files", 
            "name": "outfiles"
        },
	{
	    "id": "config_file",
	    "name": "Configuration file",
	    "command-line-flag": "-c", 
	    "value-key": "[CONFIG_FILE]",
            "path-template": "./config.txt",
	    "file-template": [
		"# This is a demo configuration file",
		"numInput=[CONFIG_NUMBER]"
	    ]
	}
    ], 
    "description": "This property describes the tool or application"
}
